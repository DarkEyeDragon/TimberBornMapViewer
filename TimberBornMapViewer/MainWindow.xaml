<Window x:Class="TimberBornMapViewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TimberBornMapViewer"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Button Name="BtnOpenFile" Click="BtnOpenFile_Click">Open file</Button>
            <DockPanel>
                <Canvas DockPanel.Dock="Left" Width="1024" Height="1024" Name="MapCanvas">
                </Canvas>
                <StackPanel DockPanel.Dock="bottom">
                    <Label Name="LabelPosition"/>
                    <Label Name="LabelMoistureLevel"/>
                    <Label Name="LabelTileName"/>
                </StackPanel>
            </DockPanel>
        </StackPanel>
    </Grid>
</Window>
